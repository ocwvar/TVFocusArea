<?xml version="1.0" encoding="utf-8"?>
<com.ocwvar.libfocusarea.FocusArea xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f8f8f"
    app:FA_allowChildOutOfBound="true"
    app:FA_focusMoveDuration="300">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="#223651">

            <View
                android:id="@+id/a1"
                style="@style/FocusableWidget"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="#fff" />

            <View
                android:id="@+id/a2"
                style="@style/FocusableWidget"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/a1"
                android:background="#fff" />

            <View
                android:id="@+id/a3"
                style="@style/FocusableWidget"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/a2"
                android:background="#fff" />

            <TextView
                android:id="@+id/jump1"
                style="@style/FocusableWidget"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/a3"
                android:background="#fff"
                android:gravity="center"
                android:text="测试 1"
                android:textColor="#000"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="150dp"
            android:background="#51224f"
            android:orientation="horizontal"
            android:padding="15dp">

            <View
                android:id="@+id/b1"
                style="@style/FocusableWidget"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:tag="b1" />

            <View
                android:id="@+id/b2"
                style="@style/FocusableWidget"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:background="#fff"
                android:tag="b2" />

            <View
                android:id="@+id/b3"
                style="@style/FocusableWidget"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="#fff"
                android:tag="b3" />

            <View
                android:id="@+id/b4"
                style="@style/FocusableWidget"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:background="#fff"
                android:tag="b4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="430dp"
            android:orientation="horizontal">

            <TextView
                style="@style/FocusableWidget"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#d1d1d1"
                android:gravity="center"
                android:text="权重 1"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                style="@style/FocusableWidget"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:text="权重 2"
                android:textColor="#000"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="300dp"
            android:background="#195b47" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#515b19" />

    </RelativeLayout>

</com.ocwvar.libfocusarea.FocusArea>